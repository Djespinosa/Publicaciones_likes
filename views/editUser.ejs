<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head', {webtitle: "Editar usuarios" }) %>

  <body>
    <%- include('./partials/header') %>
      <main>
        <div class="editProduct">
          <section>
            <div class="edit-product-text">
              <p>EDITAR USUARIO.</p>
            </div>
            <form action="/users/editUser/<%= Users.id %>?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded" class="form-editProduct">

              <div class="edit-log-nameProduct">
                <input type="text" name="last_name" id="last_name" placeholder="Apellido" value="<%= Users.last_name %>">
              </div>
              <div class="edit-log-nameProduct">
                <input type="text" name="name" id="name" placeholder="Nombre" value="<%= Users.name %>">
              </div>
              <div class="edit-log-nameProduct">
                <input type="email" name="email" id="email" placeholder="email" value="<%= Users.email %>">
              </div>
              <div class="edit-buttonSave">
                <button type="submit">Guardar</button>          
              </div>
            </form>
            <div class="edit-back-product">
              <a href="/users">Volver a usuarios</a>
            </div>
          </section>
        </div>
        </div>
      </main>      
  </body>

</html>