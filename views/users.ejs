<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head', {webtitle: "Productos" }) %>
</head>
<%- include('./partials/header') %>
<body>
    <div class="container-btn-new">
        <a class="btnNew" href="/users/addUser">
        <input type="button" value="Agregar Usuario">
        </a>
    </div>
    <div class="container-edit-products">
    <table class="tableProducts">
        <thead class="head-editProduct">
        <tr>
            <th>ID</th>
            <th>APELLIDO</th>
            <th>NOMBRE</th>
            <th>EMAIL</th>
            <th>ACCIONES</th>
        </tr>
        </thead>
        <tbody>
        <% for(let i=0; i < Users.length; i++){ %>
        <form method="POST" action="/users/delete/<%= Users[i].id %>?_method=DELETE">
            <tr>
            <td data-label="ID">
                <%= Users[i].id %>
            </td>
            <td data-label="APELLIDO">
                <%= Users[i].last_name %>
            </td>
            <td data-label="NOMBRE">
                <%= Users[i].name %>
            </td>
            <td data-label="EMAIL">
                <%= Users[i].email %>
            </td>

            <td data-label="ACCIONES">
                <div class="btnEdit">
                <a href="/users/editUser/<%= Users[i].id %>">
                    <i class="fa-solid fa-pencil"></i>
                </a>
                </div>
                <button type="submit" class="btnDelete" onclick="confirm('¿Está seguro que desea eliminar el registro?')">
                <i class="fa-solid fa-trash-can"></i>
                </button>
            </td>
            </tr>
        </form>
        <% } %>
        </tbody>
    </table>
    </div>    
</body>
</html>